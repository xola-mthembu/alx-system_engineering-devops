#!/usr/bin/env bash
# Display information about subdomains

# Function to get DNS record
get_dns_record() {
  local subdomain=$1
  local domain=$2
  local record=$(dig +short $subdomain.$domain)
  echo "The subdomain $subdomain is a A record and points to $record"
}

# Check if domain argument is provided
if [ -z "$1" ]; then
  echo "Please provide a domain name"
  exit 1
fi

# Get domain and subdomain arguments
domain=$1
subdomain=${2:-"www lb-01 web-01 web-02"}

# Loop through subdomains and display information
for sub in $subdomain; do
  get_dns_record $sub $domain
done
