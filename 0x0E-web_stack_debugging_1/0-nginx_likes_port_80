#!/bin/bash
# Ensures that Nginx is installed and configured to listen on port 80

# Update and install Nginx if it's not already installed
apt-get update
apt-get install -y nginx

# Make sure Nginx is enabled to start on boot and is running
systemctl enable nginx
systemctl start nginx

# Backup the original configuration file
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Configure Nginx to listen on all IPs at port 80
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;
    location / {
        try_files \$uri \$uri/ =404;
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx to apply the new configuration
systemctl restart nginx
